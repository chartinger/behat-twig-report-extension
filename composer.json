{
	"name" : "chartinger/behat-twig-report-extension",
	"description" : "Create Behat 3 test reports with Twig templates",
	"type" : "behat-extension",
	"authors" : [{
			"name" : "Christian Hartinger",
			"email" : "c.k.hartinger@gmail.com"
		}
	],
	"license" : [
		"MIT"
	],
	"require" : {
		"php" : ">=5.3.2",
		"behat/behat" : "~3.0.0@dev",
        "twig/twig" : "1.*"
	},
	"require-dev" : {
		"phpunit/phpunit" : "~3.7.28",
		"symfony/process" : "~2.1"
	},
	"autoload" : {
		"psr-0" : {
			"chartinger\\Behat\\TwigReportExtension" : "src/"
		}
	},
	"minimum-stability" : "dev",
	"config" : {
		"bin-dir" : "bin"
	}
}
